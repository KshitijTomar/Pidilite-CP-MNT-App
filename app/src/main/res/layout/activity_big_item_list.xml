<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_big_item_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.debuggerx.pidilitesaleshandler.Activities.BigItemListActivity">

    <ListView
        android:id="@+id/Bigitemlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Bigitemsearchlinearlayout"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/shppbck"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha=".1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_shopping" />


    <LinearLayout

        android:id="@+id/Bigitemsearchlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightYellow"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/shppngimageView2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/search" />

        <EditText
            android:id="@+id/shppngtxtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Search"/>


    </LinearLayout>
</RelativeLayout>
