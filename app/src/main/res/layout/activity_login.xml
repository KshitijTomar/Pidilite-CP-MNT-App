<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.debuggerx.pidilitesaleshandler.Activities.LoginActivity">

    <ImageView
        android:id="@+id/imageViewimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".1"
        app:srcCompat="@drawable/title" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Login_Title"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/login_name"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/id_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_login_text"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/login_id"
                android:inputType="number" />

            <EditText
                android:id="@+id/contact_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_login_text"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/login_contact"
                android:inputType="phone" />

            <EditText
                android:id="@+id/email_login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_login_text"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Login_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="REGISTER"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/edit_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:onClick="registerInfo"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/tick" />

</RelativeLayout>
